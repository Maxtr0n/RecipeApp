{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Microsoft.AspNetCore.Authorization": "Debug"
    }
  },
  "ConnectionStrings": {
    "SqlServer": "Server={DB_HOST};Database={DB_NAME};User Id={DB_USER};Password={DB_PASSWORD};Persist Security Info=False;TrustServerCertificate=True;",
    "Postgres": "Host=localhost;Port=5432;Database=RecipeDb;Username=postgres;Password=Secret12345!;"
  },
  "Authentication": {
    "MetadataAddress": "http://localhost:18080/realms/recipe-app/.well-known/openid-configuration",
    "ValidIssuer": "http://localhost:18080/realms/recipe-app",
    "Audience": "recipe-api"
  }
}
